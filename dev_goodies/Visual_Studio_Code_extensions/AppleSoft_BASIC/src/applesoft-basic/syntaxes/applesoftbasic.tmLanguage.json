{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "AppleSoft BASIC",
	"patterns": [
		{
			"include": "#number"
		},
		{
			"include": "#type"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#control"
		},
		{
			"include": "#operator"
		},
		{
			"include": "#reserved"
		},
		{
			"include": "#tag"
		},
		{
			"include": "#name"
		},
		{
			"include": "#string"
		}
	],
	"repository": {
		"tag": {
			"patterns": [
				{
					"name": "macro.applesoftbasic",
					"match": "^\\d+\\b"
				},
				{
					"name": "macro.applesoftbasic",
					"match": "(?<=\\b(GOTO|GOSUB|THEN)\\s+)\\d+(?=(\\s|$))"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.applesoftbasic",
					"match": "\\bREM\\b[^\\n\\r]*"
				}
			]
		},
		"control": {
			"patterns": [
				{
					"name": "keyword.control.applesoftbasic",
					"match": "\\b(\\&|CALL|CONT|END|FOR|GOSUB|GOTO|IF|NEXT|NOTRACE|ON|ONERR|POP|RESUME|RETURN|RUN|STEP|STOP|THEN|TO|TRACE|USR|WAIT)\\b"
				}
			]
		},
		"operator": {
			"patterns": [
				{
					"name": "keyword.operator.applesoftbasic",
					"match": "\\b(\\=|-|\\^|\\*|\\/|\\+)\\b"
				},
				{
					"name": "keyword.operator.logical.applesoftbasic",
					"match": "\\b(\\=|<|>|<\\=|>\\=|<>|NOT|AND|OR)\\b"
				}
			]
		},
		"reserved": {
			"patterns": [
				{
					"name": "support.function.applesoftbasic",
					"match": "\\b(ABS|AND|ASC|ATN|COS|EXP|INT|LEN|LOG|NOT|OR|RND|SGN|SIN|SQR|TAN|VAL)\\b"
				},
				{
					"name": "support.function.applesoftbasic",
					"match": "\\b(CHR|LEFT|MID|RIGHT|STR)\\$"
				},
				{
					"name": "keyword.other.applesoftbasic",
					"match": "\\b(CLEAR|COLOR\\=|DATA|DEL|DRAW|FLASH|FRE|GET|GR|HCOLOR\\=|HGR|HGR2|HIMEM\\:|HLIN|HOME|HPLOT|HTAB|IN#|INPUT|INVERSE|LIST|LOAD|LOMEM\\:|NEW|NORMAL|PDL|POS|PEEK|PLOT|POKE|PRINT|PR#|READ|RECALL|RESTORE|ROT\\=|SAVE|SCALE\\=|SHLOAD|SPC|SPEED\\=|STORE|TAB|TEXT|VLIN|VTAB|XPLOT|XDRAW)\\b"
				}
			]
		},
		"type": {
			"patterns": [
				{
					"name": "storage.type.struct.applesoftbasic",
					"match": "\\b(DIM)\\b"
				},
				{
					"name": "support.type.applesoftbasic",
					"match": "\\b(%|\\$)"
				},
				{
					"name": "support.type.applesoftbasic",
					"match": "\\b(DEF\\sFN|LET)\\b"
				}
			]
		},
		"name": {
			"patterns": [
				{
					"name": "entity.name.variable.applesoftbasic",
					"match": "\\b(?!CHR\\$|LEFT\\$|MID\\$|RIGHT\\$|STR\\$)([A-Z]+\\d*\\b(%|\\$)?)\\b"
				}
			]
		},
		"number": {
			"patterns": [
				{
					"name": "number.applesoftbasic",
					"match": "\\b(\\d+)\\b"
				}
			]
		},
		"string": {
			"name": "string.quoted.double.applesoftbasic",
			"begin": "\"",
			"end": "\""
		}
	},
	"scopeName": "source.applesoftbasic"
}